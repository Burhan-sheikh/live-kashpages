rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isPro() {
      let userData = getUserData();
      return userData.plan == 'pro' && 
             userData.planExpiresAt > request.time;
    }

    function isShopOwner(shopId) {
      let shop = get(/databases/$(database)/documents/shops/$(shopId)).data;
      return isOwner(shop.ownerId);
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read their own user document
      allow read: if isOwner(userId);
      
      // Users can create their own document on signup
      allow create: if isAuthenticated() && 
                       isOwner(userId) &&
                       request.resource.data.email == request.auth.token.email;
      
      // Users can update their own document
      allow update: if isOwner(userId) &&
                       // Prevent plan manipulation
                       request.resource.data.plan == resource.data.plan &&
                       request.resource.data.planExpiresAt == resource.data.planExpiresAt;
    }

    // Shops collection
    match /shops/{shopId} {
      // Public read for published shops
      allow read: if resource.data.status == 'published' || 
                     isOwner(resource.data.ownerId);
      
      // Create: authenticated users can create shops
      allow create: if isAuthenticated() &&
                       request.resource.data.ownerId == request.auth.uid &&
                       // Free plan: max 1 shop
                       (isPro() || 
                        get(/databases/$(database)/documents/users/$(request.auth.uid))
                          .data.shopCount == null ||
                        get(/databases/$(database)/documents/users/$(request.auth.uid))
                          .data.shopCount < 1);
      
      // Update: only owner can update
      allow update: if isOwner(resource.data.ownerId) &&
                       request.resource.data.ownerId == resource.data.ownerId &&
                       // Validate gallery limit based on plan
                       (isPro() || request.resource.data.gallery.size() <= 3) &&
                       // Validate ratings toggle (pro only)
                       (isPro() || request.resource.data.settings.ratingsEnabled == false) &&
                       // Validate branding removal (pro only)
                       (isPro() || request.resource.data.settings.removeBranding == false);
      
      // Delete: only owner can delete
      allow delete: if isOwner(resource.data.ownerId);
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Public read for visible reviews
      allow read: if resource.data.isVisible == true ||
                     isShopOwner(resource.data.shopId);
      
      // Create: anyone can create a review (rate limiting done in Cloud Function)
      allow create: if request.resource.data.rating >= 1 &&
                       request.resource.data.rating <= 5 &&
                       request.resource.data.userName is string &&
                       request.resource.data.comment is string;
      
      // Update: only shop owner can update (toggle visibility)
      allow update: if isShopOwner(resource.data.shopId) &&
                       request.resource.data.keys().hasOnly(['isVisible', 'updatedAt']);
      
      // Delete: only shop owner can delete
      allow delete: if isShopOwner(resource.data.shopId);
    }

    // Analytics collection
    match /analytics/{analyticsId} {
      // Only shop owner can read analytics
      allow read: if isAuthenticated() &&
                     isShopOwner(resource.data.shopId);
      
      // No direct create/update/delete - managed by Cloud Functions
      allow write: if false;
    }

    // Plans collection (read-only reference data)
    match /plans/{planId} {
      allow read: if true;
      allow write: if false;
    }

    // Payments collection
    match /payments/{paymentId} {
      // Users can only read their own payments
      allow read: if isOwner(resource.data.userId);
      
      // No direct writes - managed by Cloud Functions
      allow write: if false;
    }
  }
}
